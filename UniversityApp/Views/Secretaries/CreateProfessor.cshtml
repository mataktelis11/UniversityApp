@model UniversityApp.Models.Professor

@{
    ViewData["Title"] = "Create a new Professor";
}



<h1><button type="button" class="btn btn-success" onclick="location.href='@Url.Action("UniversityProfessors", "Secretaries")'"><i class="bi bi-backspace-fill"></i> Go back to the list</button> Register a new Professor</h1>

<hr />

<div class="row row-cols-1 row-cols-md-2 g-4">

    <div class="col">
        <div class="card text-white bg-secondary mb-3" style="max-width: 40rem;">
            <div class="card-header">Register a new Professor</div>
            <div class="card-body">
                <h4 class="card-title">Please fill in th following fields</h4>
                <form asp-action="CreateProfessor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Afm" class="control-label"></label>
                        <input asp-for="Afm" class="form-control" />
                        <span asp-validation-for="Afm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control  />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card text-white bg-warning mb-3" style="max-width: 20rem;">
          <div class="card-header">New Account Credentials</div>
          <div class="card-body">
                <h4 class="card-title"><i class="bi bi-exclamation-octagon-fill"></i> Warning <i class="bi bi-exclamation-octagon-fill"></i></h4>
            <p class="card-text">When registering a new Professor, a new account will be created with the following credetials:</p>
            <ul>
                    <li><b>Username</b>: a&#60;AFM&#62;</li>
                    <li><b>Password</b>: &#60;AFM&#62;</li>
            </ul>
            where &#60;AFM&#62; is the Professor's AFM number.
          </div>
        </div>
    </div>

</div>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
