@model UniversityApp.Models.Professor

@{
    ViewData["Title"] = "Create a new Professor";
}

<h1>Create</h1>

<h4>Professor</h4>
<div class="row">
<div class="card-deck">

@*        https://www.codeply.com/go/nhbdi2FkJm*@

<div class="card text-white bg-secondary mb-3" style="max-width: 40rem;">
  <div class="card-header">Header</div>
  <div class="card-body">
    <h4 class="card-title">Secondary card title</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProfessor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group" style="width:100%;">
                <label asp-for="Afm" class="control-label"></label>
                <input asp-for="Afm" class="form-control" />
                  <span asp-validation-for="Afm" class="text-danger"></span>
              </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                  <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    </div>
</div>



<div class="card text-white bg-warning mb-3" style="max-width: 20rem;">
  <div class="card-header">New Account Credentials</div>
  <div class="card-body">
    <h4 class="card-title">Warning</h4>
    <p class="card-text">When registering a new Professor, a new account will be created with the following credetials:</p>
    <ul>
            <li><b>Username</b>: a&#60;AFM&#62;</li>
            <li><b>Password</b>: &#60;AFM&#62;</li>
    </ul>
    wherte &#60;AFM&#62; is the Professor's AFM number.
  </div>
</div>

</div>
</div>

<hr />


<div>
    <a asp-action="UniversityProfessors">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
