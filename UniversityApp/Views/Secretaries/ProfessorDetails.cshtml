@model UniversityApp.Models.Professor

@{
    ViewData["Title"] = "Professor Details";
    var availableCourses = ViewData["availableCourses"] as List<UniversityApp.Models.Course>;
}

<h1>Details</h1>

<div>
    <h4>Professor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Afm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Afm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Userid)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProfessorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h1>Assigned Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    <a asp-action="RegisteredStudents" asp-route-id="@item.CourseId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h1>Avaible Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in availableCourses)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        <a asp-action="RegisteredStudents" asp-route-id="@item.CourseId">Edit</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
