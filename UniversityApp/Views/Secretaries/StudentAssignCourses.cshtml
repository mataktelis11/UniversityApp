@model UniversityApp.Models.Student

@{
    ViewData["Title"] = "Assign Courses";
    var availableCourses = ViewData["availableCourses"] as List<UniversityApp.Models.Course>;
}


<h1>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("StudentDetails", "Secretaries",  new RouteValueDictionary(new { id=Model.StudentId}))'"><i class="bi bi-backspace-fill"></i> Go back</button> &nbsp; Assign Courses for @Model.Name</h1>

<p>Check the Courses you want to assign for this Student.</p>

<br />

<table class="table table-striped table-hover table-bordered table-dark w-100">
    <thead class="table-secondary">
        <tr>
            <th>Course Title</th>
            <th>Semester</th>
            <th>Select</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in availableCourses)
        {
                    <tr>
                        <td>
                    @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                        </td>
                        <td>
                    <input class="form-check-input" type="checkbox" value="" id="@item.CourseId" name="common-check" onclick="updatebox()">
                        </td>
                    </tr>
        }
    </tbody>
</table>



<form asp-action="StudentAssignCourses">
    <input type="number" id="id" value="@Model.StudentId" name="id" hidden=""/>
    <input type="text" id="selectedCourses" name="selectedCourses" hidden=""/>
    <input type="submit" value="Submit the checked Courses" class="btn btn-primary" />
</form>

<script>
    function updatebox() {

        var arrCheckboxes = document.querySelectorAll('input[name=common-check]:checked');
        var textBox = document.getElementById("selectedCourses");
        var strCheck = "";

        for (var i = 0; i < arrCheckboxes.length; i++) {

            strCheck += arrCheckboxes[i].getAttribute('id') + " ";
        }
        textBox.value = strCheck
  }
</script>
